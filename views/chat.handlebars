<h1>Chat</h1>
<p class="muted">Chat simple a sala global</p>
<hr />

<div class="card">
  <div id="chat-log" style="height:320px; overflow:auto; background:#0b1220; border-radius:10px; padding:12px; border:1px solid #1f2937;"></div>
  <form id="chat-form" class="row" style="margin-top:8px;">
    <input id="chat-user" placeholder="Tu nombre" required />
    <input id="chat-text" placeholder="Mensaje..." required />
    <button type="submit">Enviar</button>
  </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/chat.js"></script>
